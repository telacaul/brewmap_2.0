<div class="box" style="background-color: #3298db">
    <h3 class="text-light">Brew Post</h3>
    <div class="col-12 col-md-12 mb-5 bg-dark text-light p-3 flex-column">
        <h3 class="portfolio-item-title text-light">{{post.title}}</h3>
        <h5 class="portfolio-languages">{{post.body}}</h5>
        <p>posted by {{user.username}} on {{format_date post.created_at}}</p>
        {{#if loggedIn}}
        <hr>
        <form class="comment-form">
            <div>
                <textarea class="textarea" name="comment-body"></textarea>
            </div>
            <br>
            <div>
                <button type="submit">Add Comment</button>
            </div>
        </form>
        {{/if}}
    </div>
    <hr class="text-light">
    <h3 class="text-light">Comments</h3>
    {{#if post.comments}}
    <div class="col-12 col-md-12 mb-5 bg-dark text-light p-3 flex-column">
        {{> comments post.comments}}
    </div>
    {{/if}}
</div>


{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}